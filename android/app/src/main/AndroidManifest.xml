<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.PreciosCerca"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Activity Principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PreciosCerca">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Búsqueda (entrada para modo detallado) -->
        <activity
            android:name=".BusquedaActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- Activity Lista Modo (entrada para modo lista) -->
        <activity
            android:name=".ListaModoActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- Activity Lista de Productos -->
        <activity
            android:name=".ProductListActivity"
            android:exported="false"
            android:parentActivityName=".BusquedaActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- Activity Lista de Compras -->
        <activity
            android:name=".ListaComprasActivity"
            android:exported="false"
            android:parentActivityName=".ProductListActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- Activity Comparación de Precios -->
        <activity
            android:name=".ComparacionActivity"
            android:exported="false"
            android:parentActivityName=".ListaComprasActivity"
            android:theme="@style/Theme.PreciosCerca" />

    </application>

</manifest>