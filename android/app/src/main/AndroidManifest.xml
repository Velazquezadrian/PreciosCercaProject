<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.PreciosCerca"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- ========== FLUJO PRINCIPAL: Lista de Compras por Supermercado ========== -->
        
        <!-- [INICIO] Pantalla de bienvenida con botón "Empezar Lista" -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PreciosCerca">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- [SELECCIÓN] Elegir supermercado (Carrefour/Día/La Reina) -->
        <activity
            android:name=".SeleccionSuperActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- [BÚSQUEDA] Buscar productos en el supermercado seleccionado -->
        <activity
            android:name=".BusquedaActivity"
            android:exported="false"
            android:parentActivityName=".SeleccionSuperActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- [MI LISTA] Ver lista de productos agregados -->
        <activity
            android:name=".MiListaActivity"
            android:exported="false"
            android:parentActivityName=".BusquedaActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- [LISTA TERMINADA] Marcar productos como comprados y compartir -->
        <activity
            android:name=".ListaTerminadaActivity"
            android:exported="false"
            android:parentActivityName=".MiListaActivity"
            android:theme="@style/Theme.PreciosCerca" />

        <!-- FileProvider para compartir archivos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>