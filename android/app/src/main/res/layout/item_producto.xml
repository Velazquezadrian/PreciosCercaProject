<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/ivProducto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_light"
            android:contentDescription="Imagen del producto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_menu_gallery" />

        <!-- Badge "MÃ¡s barato" o "MÃ¡s cercano" (se mostrarÃ¡ segÃºn lÃ³gica) -->
        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge_best"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="â­ MÃS BARATO"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/ivProducto"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            tools:visibility="visible" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/containerPrecio"
            app:layout_constraintStart_toEndOf="@id/ivProducto"
            app:layout_constraintTop_toBottomOf="@id/tvBadge"
            tools:text="Leche La SerenÃ­sima Entera Fortificada" />

        <!-- Container del precio con diseÃ±o destacado -->
        <LinearLayout
            android:id="@+id/containerPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_precio"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvNombreProducto">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRECIO"
                android:textSize="9sp"
                android:textColor="@color/gray_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/precio_color"
                android:gravity="center"
                tools:text="$1.250" />

        </LinearLayout>

        <!-- Info del supermercado con icono -->
        <LinearLayout
            android:id="@+id/containerSuper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/ivProducto"
            app:layout_constraintTop_toBottomOf="@id/tvNombreProducto">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸª"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvSupermercado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_supermercado"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                tools:text="La Gallega" />

        </LinearLayout>

        <!-- Info de distancia (si estÃ¡ disponible) -->
        <LinearLayout
            android:id="@+id/containerDistancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/containerSuper"
            app:layout_constraintTop_toTopOf="@id/containerSuper"
            app:layout_constraintBottom_toBottomOf="@id/containerSuper"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="12sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:textStyle="bold"
                tools:text="0.5 km" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProducto" />

        <!-- BotÃ³n de Agregar a Lista - Grande y Visual -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAgregarLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@android:color/white"
            app:backgroundTint="@color/accent"
            app:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:contentDescription="Agregar a lista de compras" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>