<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header con logo y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PreciosCerca"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compará precios y ahorrá"
            android:textSize="14sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etBusqueda"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="¿Qué producto buscás?"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Buscar"
            android:textColor="@android:color/white"
            android:background="@color/primary"
            android:paddingHorizontal="20dp" />

    </LinearLayout>

    <!-- Título de productos destacados -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos destacados"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:padding="16dp" />

    <!-- ProgressBar para carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:visibility="gone" />

    <!-- Lista de productos aleatorios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_producto" />

    <!-- Botón flotante para ver lista de compras -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabVerLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_shopping_cart"
        android:contentDescription="Ver mi lista de compras"
        app:tint="@android:color/white"
        app:backgroundTint="@color/primary" />

</LinearLayout>
