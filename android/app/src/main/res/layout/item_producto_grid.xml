<?xml version="1.0" encoding="utf-8"?>
<!-- Layout de producto para vista de cuadrícula (3 columnas) -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Imagen del producto - Compacta -->
        <ImageView
            android:id="@+id/ivProducto"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_light"
            android:contentDescription="Imagen del producto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@android:drawable/ic_menu_gallery" />

        <!-- Nombre del producto (1 línea) -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="9sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/ivProducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Pan baguette" />

        <!-- Precio destacado -->
        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/precio_color"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvNombreProducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="$1.250" />

        <!-- Botón de agregar (flotante en la esquina inferior derecha) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAgregarLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@android:color/white"
            app:backgroundTint="@color/accent"
            app:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvPrecio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Agregar a lista de compras" />

        <!-- Badge oculto (visible solo en ciertos productos) -->
        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <!-- Campos ocultos requeridos por el adapter -->
        <TextView
            android:id="@+id/tvSupermercado"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDistancia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <View
            android:id="@+id/containerDistancia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
